<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.Views.CommandListControler">
   <children>
      <ScrollPane fitToWidth="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="commandsList" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
      <HBox alignment="CENTER" prefHeight="9.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onProductsButtonClick" prefHeight="75.0" prefWidth="150.0" styleClass="btn" text="Productes">
               <font>
                  <Font name="SansSerif Regular" size="25.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onTagsButtonClick" prefHeight="75.0" prefWidth="150.0" styleClass="btn" text="Tags">
               <font>
                  <Font name="SansSerif Regular" size="25.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="75.0" prefWidth="150.0" styleClass="btn" text="Taules">
               <font>
                  <Font name="SansSerif Regular" size="25.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
